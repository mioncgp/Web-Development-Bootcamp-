<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css" />
    <title>To Do List</title>
  </head>
  <body>
    <div class="box" id="heading"><h1><%= listTitle %></h1></div>
    <div class="box">
      <% newListItems.forEach((item, index) => { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= newListItems[index] %></p>
      </div>
      <% }) %>
      <form class="item" action="/" method="POST">
        <input
          type="text"
          name="newItem"
          placeholder="New Item..."
          autocomplete="off"
        />
        <button type="submit" name="button" value="<%= listTitle %>">+</button>
      </form>
    </div>
  </body>
</html>
